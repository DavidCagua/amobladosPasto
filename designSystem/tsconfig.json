{
  "compilerOptions": {
    "outDir": "lib",
    "module": "es2020",
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
